					"name": "z. Search for organization by name",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{NODEBASE}}/internal/didman/v1/search/organizations?query={{CUSTOMERNAME}}",
							"host": [
								"{{NODEBASE}}"
							],
							"path": [
								"internal",
								"didman",
								"v1",
								"search",
								"organizations"
							],
							"query": [
								{
									"key": "query",
									"value": "{{CUSTOMERNAME}}"
								}
							]
						}
					},
					"response": []
				}
			]
		},
