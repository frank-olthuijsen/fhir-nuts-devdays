						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{NODEBASE}}/internal/vcr/v2/verifier/NutsOrganizationCredential/untrusted",
							"host": [
								"{{NODEBASE}}"
							],
							"path": [
								"internal",
								"vcr",
								"v2",
								"verifier",
