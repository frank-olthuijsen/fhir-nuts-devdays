						"url": {
							"raw": "{{NODEBASE}}/internal/vcr/v2/verifier/trust",
							"host": [
								"{{NODEBASE}}"
							],
							"path": [
								"internal",
								"vcr",
								"v2",
								"verifier",
								"trust"
							]
						}
					},
					"response": []
				},
				{
					"name": "x. Check customer DID contents",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{NODEBASE}}/internal/vdr/v1/did/{{CUSTOMERDID}}",
							"host": [
								"{{NODEBASE}}"
							],
							"path": [
